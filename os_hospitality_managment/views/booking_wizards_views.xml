<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire pour le wizard d'import -->
    <record id="view_booking_import_wizard_form" model="ir.ui.view">
        <field name="name">booking.import.wizard.form</field>
        <field name="model">booking.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import de fichier Booking.com">
                <sheet>
                    <!-- Étape 1: Upload du fichier -->
                    <div invisible="state != 'upload'">
                        <div class="oe_title">
                            <h1>Import de fichier Booking.com</h1>
                            <p>Sélectionnez le fichier Excel exporté depuis Booking.com</p>
                        </div>
                        <group>
                            <field name="file_data" filename="file_name" required="1"/>
                            <field name="file_name" invisible="1"/>
                        </group>
                    </div>
                    
                    <!-- Étape 2: Aperçu des données -->
                    <div invisible="state != 'preview'">
                        <div class="oe_title">
                            <h1>Aperçu des données</h1>
                            <p>Vérifiez les données avant importation</p>
                        </div>
                        <group>
                            <group>
                                <field name="total_records" readonly="1"/>
                                <field name="valid_records" readonly="1"/>
                            </group>
                        </group>
                        <group string="Aperçu des 10 premiers enregistrements">
                            <field name="preview_data" nolabel="1" readonly="1" 
                                   widget="text" style="white-space: pre-wrap;"/>
                        </group>
                    </div>
                    
                    <!-- Étape 3: Confirmation -->
                    <div invisible="state != 'confirm'">
                        <div class="oe_title">
                            <h1>✓ Import terminé avec succès</h1>
                            <p>Les données ont été importées et les factures ont été générées.</p>
                        </div>
                    </div>
                    
                    <field name="state" invisible="1"/>
                </sheet>
                
                <footer>
                    <!-- Boutons étape upload -->
                    <button string="Prévisualiser" 
                            name="action_preview" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'upload'"/>
                    
                    <!-- Boutons étape preview -->
                    <button string="Importer" 
                            name="action_import" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'preview'"/>
                    <button string="Retour" 
                            name="action_cancel" 
                            type="object" 
                            class="btn-secondary"
                            invisible="state != 'preview'"/>
                    
                    <!-- Boutons étape confirm -->
                    <button string="Fermer" 
                            name="action_cancel" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'confirm'"/>
                    
                    <!-- Bouton annuler (toujours visible sauf confirm) -->
                    <button string="Annuler" 
                            name="action_cancel" 
                            type="object" 
                            class="btn-secondary"
                            invisible="state == 'confirm'"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour le wizard d'import -->
    <record id="action_booking_import_wizard" model="ir.actions.act_window">
        <field name="name">Import de fichier Booking</field>
        <field name="res_model">booking.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_booking_import_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- ========================================= -->
    <!-- WIZARD DE SAISIE MANUELLE -->
    <!-- ========================================= -->
    
    <!-- Vue formulaire pour le wizard de saisie manuelle -->
    <record id="view_booking_manual_wizard_form" model="ir.ui.view">
        <field name="name">booking.manual.wizard.form</field>
        <field name="model">booking.manual.wizard</field>
        <field name="arch" type="xml">
            <form string="Saisie manuelle de réservations">
                <sheet>
                    <div class="oe_title">
                        <h1>Saisie manuelle de réservations</h1>
                        <p>Créez un nouvel enregistrement pour saisir manuellement les réservations</p>
                    </div>
                    
                    <group>
                        <group string="Période">
                            <field name="year" required="1"/>
                            <field name="month" required="1"/>
                        </group>
                        <group string="Hébergement">
                            <field name="property_type_id" required="1" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    
                    <field name="state" invisible="1"/>
                    <field name="import_id" invisible="1"/>
                </sheet>
                
                <footer>
                    <button string="Créer et commencer la saisie" 
                            name="action_create_import" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Annuler" 
                            name="action_cancel" 
                            type="object" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour le wizard de saisie manuelle -->
    <record id="action_booking_manual_wizard" model="ir.actions.act_window">
        <field name="name">Saisie manuelle de réservations</field>
        <field name="res_model">booking.manual.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_booking_manual_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- ========================================= -->
    <!-- WIZARD D'AJOUT DE LIGNE -->
    <!-- ========================================= -->
    
    <!-- Vue formulaire pour le wizard d'ajout de ligne -->
    <record id="view_booking_import_line_wizard_form" model="ir.ui.view">
        <field name="name">booking.import.line.wizard.form</field>
        <field name="model">booking.import.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Ajouter une réservation">
                <sheet>
                    <div class="oe_title">
                        <h1>Nouvelle réservation</h1>
                    </div>
                    
                    <group>
                        <group string="Client">
                            <field name="create_new_partner"/>
                            
                            <!-- Sélection client existant -->
                            <field name="partner_id" 
                                   invisible="create_new_partner"
                                   required="not create_new_partner"
                                   options="{'no_create': True}"/>
                            <field name="booker_id" 
                                   invisible="create_new_partner"
                                   options="{'no_create': True}"/>
                            
                            <!-- Création nouveau client -->
                            <field name="partner_name" 
                                   invisible="not create_new_partner"
                                   required="create_new_partner"
                                   placeholder="Nom complet du client"/>
                            <field name="partner_phone" 
                                   invisible="not create_new_partner"
                                   placeholder="Numéro de téléphone"/>
                            <field name="partner_country_id" 
                                   invisible="not create_new_partner"
                                   options="{'no_create': True}"/>
                        </group>
                        
                        <group string="Séjour">
                            <field name="arrival_date" required="1"/>
                            <field name="duration_nights" required="1"/>
                            <field name="pax_nb" required="1"/>
                            <field name="children"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Statut">
                            <field name="payment_status"/>
                            <field name="status"/>
                        </group>
                        
                        <group string="Informations financières (optionnel)">
                            <field name="rate"/>
                            <field name="commission_amount"/>
                        </group>
                    </group>
                    
                    <field name="import_id" invisible="1"/>
                </sheet>
                
                <footer>
                    <button string="Ajouter la réservation" 
                            name="action_add_line" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Annuler" 
                            name="action_cancel" 
                            type="object" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour le wizard d'ajout de ligne -->
    <record id="action_booking_import_line_wizard" model="ir.actions.act_window">
        <field name="name">Ajouter une réservation</field>
        <field name="res_model">booking.import.line.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_booking_import_line_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>