<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire pour le wizard de configuration des factures clients -->
    <record id="view_customer_invoice_config_wizard_form" model="ir.ui.view">
        <field name="name">customer.invoice.config.wizard.form</field>
        <field name="model">customer.invoice.config.wizard</field>
        <field name="arch" type="xml">
            <form string="Configuration des factures clients">
                <sheet>
