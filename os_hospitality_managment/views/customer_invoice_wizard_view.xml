                            <field name="booking_month_id" required="1" 
                                   domain="[('customer_invoices_generated', '=', False), ('total_revenue', '>', 0)]"
                                   options="{'no_create': True}"/>
                        </group>
                        <group string="Pr√©visualisation" name="preview" invisible="not booking_month_id">
                            <field name="preview_customer_count" readonly="1"/>
                            <field name="preview_total_amount" readonly="1" widget="monetary"/>
                            <field name="company_currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Configuration produits" name="products">
                            <group>
                                <group string="Produit H√©bergement">
                                    <field name="accommodation_product_id" 
                                           options="{'no_create': True, 'no_open': True}"/>
                                    <field name="accommodation_price"/>
