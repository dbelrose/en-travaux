                                </group>
                                <group string="Produit Taxe de s√©jour">
                                    <field name="include_tax_on_invoice"/>
                                    <field name="tax_product_id" 
                                           invisible="not include_tax_on_invoice"
                                           options="{'no_create': True, 'no_open': True}"/>
                                    <field name="tax_price" invisible="not include_tax_on_invoice"/>
                                </group>
                            </group>
                        </page>

                        <page string="Options de facturation" name="options">
                            <group>
                                <group string="Regroupement">
                                    <field name="group_by_customer"/>
                                    <p class="text-muted" invisible="not group_by_customer">
                                        Toutes les r√©servations d'un m√™me client sur le mois seront regroup√©es sur une seule facture.
                                    </p>
                                    <p class="text-muted" invisible="group_by_customer">
                                        Une facture sera cr√©√©e pour chaque r√©servation individuelle.
                                    </p>
                                </group>
                                <group string="Validation">
                                    <field name="auto_validate_invoices"/>
                                    <p class="text-muted" invisible="not auto_validate_invoices">
                                        Les factures seront automatiquement valid√©es apr√®s cr√©ation.
                                    </p>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <footer>
                    <button name="action_preview_invoices" 
                            string="Pr√©visualiser"
                            type="object" 
                            class="btn-secondary"
                            invisible="not booking_month_id"/>
                    <button name="action_generate_invoices" 
                            string="G√©n√©rer les factures"
                            type="object" 
                            class="btn-primary"
                            invisible="not booking_month_id"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour le wizard de configuration des factures clients -->
    <record id="action_customer_invoice_config_wizard" model="ir.actions.act_window">
        <field name="name">Assistant factures clients</field>
        <field name="res_model">customer.invoice.config.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_customer_invoice_config_wizard_form"/>
    </record>

    <!-- Action contextuelle depuis booking.month -->
    <record id="action_customer_invoice_config_from_month" model="ir.actions.act_window">
        <field name="name">Configurer factures clients</field>
        <field name="res_model">customer.invoice.config.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_customer_invoice_config_wizard_form"/>
        <field name="context">{'default_booking_month_id': active_id}</field>
    </record>

    <!-- Ajout dans le menu -->
    <menuitem id="menu_customer_invoice_wizard"
              name="üßô Assistant factures clients"
              parent="menu_hospitality_config"
              action="action_customer_invoice_config_wizard"
