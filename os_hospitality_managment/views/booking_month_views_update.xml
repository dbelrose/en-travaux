    <!-- Vue recherche pour booking.month avec filtres factures clients -->
    <record id="view_booking_month_search" model="ir.ui.view">
        <field name="name">booking.month.search</field>
        <field name="model">booking.month</field>
        <field name="arch" type="xml">
            <search string="Rechercher vues mensuelles">
                <field name="year"/>
                <field name="month"/>
                <field name="property_type_id"/>
                <field name="display_name"/>
                <separator/>
                <filter string="Année courante" name="current_year"
                        domain="[('year', '=', context_today().year)]"/>
                <filter string="Mois courant" name="current_month"
                        domain="[('year', '=', context_today().year), ('month', '=', context_today().month)]"/>
                <separator/>
                <filter string="Avec revenus" name="with_revenue"
                        domain="[('total_revenue', '>', 0)]"/>
                <filter string="Factures clients générées" name="customer_invoiced"
                        domain="[('customer_invoices_generated', '=', True)]"/>
                <filter string="Factures clients manquantes" name="customer_not_invoiced"
                        domain="[('customer_invoices_generated', '=', False), ('total_revenue', '>', 0)]"/>
                <separator/>
                <filter string="Facturation complète" name="all_invoices"
                        domain="[('invoice_state', '=', 'all')]"/>
                <filter string="Facturation incomplète" name="incomplete_invoices"
                        domain="[('invoice_state', '!=', 'all'), ('total_revenue', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Regrouper par">
                    <filter string="Année" name="group_year" context="{'group_by': 'year'}"/>
                    <filter string="Mois" name="group_month" context="{'group_by': 'month'}"/>
                    <filter string="Type de propriété" name="group_property" context="{'group_by': 'property_type_id'}"/>
                    <filter string="État facturation" name="group_invoice_state" context="{'group_by': 'invoice_state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour voir toutes les factures clients d'hospitality -->
    <record id="action_hospitality_customer_invoices" model="ir.actions.act_window">
        <field name="name">Factures clients Hospitality</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[
            ('move_type', '=', 'out_invoice'),
            ('booking_month_id', '!=', False)
        ]</field>
        <field name="context">{
            'default_move_type': 'out_invoice'
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune facture client d'hospitality trouvée
            </p>
            <p>
                Les factures clients sont générées automatiquement depuis les vues mensuelles
                en utilisant le bouton "Factures clients".
            </p>
        </field>
    </record>

