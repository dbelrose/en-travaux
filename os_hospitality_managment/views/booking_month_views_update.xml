                <field name="customer_invoices_amount" sum="Total facturé clients" widget="monetary" optional="show"/>
            </field>

            <!-- Mise à jour du bouton d'action -->
            <button name="action_generate_all_invoices" position="attributes">
                <attribute name="string">Toutes factures</attribute>
            </button>

            <!-- Ajout d'un bouton spécifique pour les factures clients -->
            <button name="action_generate_all_invoices" position="after">
                <button name="action_generate_customer_invoices"
                        string="Factures clients"
                        type="object"
                        icon="fa-user"
