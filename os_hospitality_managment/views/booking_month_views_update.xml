<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mise à jour de la vue formulaire booking.month pour les factures clients -->
    <record id="view_booking_month_form_customer_invoices" model="ir.ui.view">
        <field name="name">booking.month.form.customer.invoices</field>
        <field name="model">booking.month</field>
        <field name="inherit_id" ref="view_booking_month_form"/>
        <field name="arch" type="xml">
            <!-- Ajout du bouton pour générer les factures clients -->
            <button name="action_generate_both_concierge_invoices" position="after">
                <button name="action_generate_customer_invoices"
                        string="Factures clients"
                        type="object"
                        class="btn-primary"
                        invisible="customer_invoices_generated or total_revenue &lt;= 0"/>
                <button name="action_view_customer_invoices"
                        string="Voir factures clients"
                        type="object"
                        class="btn-secondary"
                        invisible="not customer_invoices_generated"/>
            </button>

            <!-- Mise à jour du bouton "Générer toutes les factures" -->
            <button name="action_generate_all_invoices" position="attributes">
                <attribute name="string">Toutes les factures</attribute>
            </button>

            <!-- Ajout des statistiques clients dans la page statistiques -->
            <page name="stats" position="inside">
                <group string="Facturation clients">
                    <field name="customer_invoices_generated" readonly="1"/>
                    <field name="total_customer_invoices" readonly="1"/>
                    <field name="customer_invoices_amount" readonly="1" widget="monetary"/>
                </group>
            </page>

            <!-- Mise à jour de la page factures -->
            <page name="invoices" position="replace">
                <page string="Factures" name="invoices">
                    <group>
                        <group string="État facturation">
                            <field name="invoice_state" readonly="1" widget="badge"/>
                        </group>
                    </group>

                    <group>
                        <group string="Factures fournisseurs">
                            <field name="booking_invoice_id" readonly="1"/>
                            <field name="concierge_invoice_id" readonly="1"/>
                        </group>
                        <group string="Factures clients">
                            <field name="total_customer_invoices" readonly="1"/>
                            <field name="customer_invoices_amount" readonly="1" widget="monetary"/>
                        </group>
                    </group>

                    <!-- Liste des factures clients si générées -->
                    <group string="Détail factures clients" invisible="not customer_invoices_generated">
                        <field name="customer_invoice_ids" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="invoice_date"/>
                                <field name="amount_total" widget="monetary"/>
                                <field name="state" widget="badge"/>
                                <field name="company_currency_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <!-- Mise à jour de la vue liste pour inclure les informations clients -->
    <record id="view_booking_month_tree_customer_invoices" model="ir.ui.view">
        <field name="name">booking.month.tree.customer.invoices</field>
