<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Catégorie de produits pour l'hospitalité -->
    <record id="product_category_hospitality" model="product.category">
        <field name="name">Services Hospitalité</field>
        <field name="parent_id" ref="product.product_category_all"/>
    </record>

    <!-- Produit par défaut pour l'hébergement -->
    <record id="product_accommodation_default" model="product.template">
        <field name="name">Hébergement touristique</field>
        <field name="type">service</field>
        <field name="categ_id" ref="product_category_hospitality"/>
        <field name="sale_ok">True</field>
        <field name="purchase_ok">False</field>
        <field name="list_price">10000.0</field>
        <field name="uom_id" ref="uom.product_uom_unit"/>
        <field name="uom_po_id" ref="uom.product_uom_unit"/>
        <field name="invoice_policy">order</field>
        <field name="description">Service d'hébergement touristique pour facturation clients</field>
    </record>

    <!-- Produit par défaut pour la taxe de séjour (côté client) -->
    <record id="product_tourist_tax_customer" model="product.template">
        <field name="name">Taxe de séjour</field>
        <field name="type">service</field>
        <field name="categ_id" ref="product_category_hospitality"/>
        <field name="sale_ok">True</field>
        <field name="purchase_ok">False</field>
        <field name="list_price">60.0</field>
        <field name="uom_id" ref="uom.product_uom_unit"/>
        <field name="uom_po_id" ref="uom.product_uom_unit"/>
        <field name="invoice_policy">order</field>
        <field name="description">Taxe de séjour facturée aux clients (60 XPF par nuitée adulte)</field>
    </record>

    <!-- Séquence spécifique pour les factures d'hospitalité (optionnel) -->
    <record id="seq_hospitality_customer_invoice" model="ir.sequence">
        <field name="name">Factures clients hospitalité</field>
        <field name="code">hospitality.customer.invoice</field>
        <field name="prefix">HOSP/%(year)s/</field>
        <field name="suffix"></field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Configuration par défaut -->
    <record id="hospitality_default_config" model="ir.config_parameter">
        <field name="key">hospitality.default_accommodation_price</field>
        <field name="value">10000.0</field>
    </record>

    <record id="hospitality_default_tax_config" model="ir.config_parameter">
        <field name="key">hospitality.default_tax_price</field>
        <field name="value">60.0</field>
    </record>

    <record id="hospitality_group_by_customer_config" model="ir.config_parameter">
        <field name="key">hospitality.group_by_customer_default</field>
        <field name="value">True</field>
    </record>

</odoo>