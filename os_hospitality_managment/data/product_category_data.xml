<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
    <!-- ========================================= -->
    <!-- CATÉGORIES DE PRODUITS -->
    <!-- ========================================= -->

    <!-- Catégorie pour les taxes -->
    <record id="product_category_taxes" model="product.category">
        <field name="name">Taxes et Redevances</field>
        <field name="parent_id" ref="product.product_category_all"/>
    </record>

    <!-- Catégorie de produit "Tourist tax" -->
    <record id="product_category_tourist_tax" model="product.category">
        <field name="name">Tourist tax</field>
        <field name="parent_id" ref="product_category_taxes"/> <!-- Catégorie parente -->
        <field name="property_account_expense_categ_id" ref="account.1_pcg_447"/> <!-- Compte de charge (dette fiscale) -->
        <field name="property_account_income_categ_id" ref="account.1_pcg_44578"/> <!-- Compte de revenu (taxe collectée) -->
    </record>

    <!-- Catégorie pour les commissions -->
    <record id="product_category_commissions" model="product.category">
        <field name="name">Commissions</field>
        <field name="parent_id" ref="product.product_category_all"/>
    </record>

</odoo>
