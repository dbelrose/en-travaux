<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
    <record id="res_partner_mairie_punaauia" model="res.partner">
        <field name="name">Mairie de Punaauia</field>
        <field name="street">PK 10,5 C/Mont, Route des Plages</field>
        <field name="city">Punaauia</field>
        <field name="zip">98703</field>
        <field name="country_id" ref="base.pf"/>  <!-- Polynésie française -->
        <field name="phone">+689 40 86 51 51</field>
        <field name="email">contact@mairie-punaauia.pf</field>
        <field name="is_company">True</field>
        <field name="supplier_rank">1</field>  <!-- La mairie est un fournisseur (bénéficiaire des taxes) -->
        <field name="category_id" eval="[(6, 0, [ref('res_partner_category_commune')])]"/>  <!-- Catégorie "Commune" -->

        <!-- Comptes comptables associés -->
        <field name="property_account_receivable_id" ref="account.1_pcg_411"/>  <!-- Compte client -->
        <field name="property_account_payable_id" ref="account.1_pcg_401"/>  <!-- Compte fournisseur -->
    </record>
</odoo>
