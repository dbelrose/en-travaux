<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================= -->
    <!-- Groupes spécifiques Booking   -->
    <!-- ============================= -->

    <record id="group_booking_user" model="res.groups">
        <field name="name">Booking User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_booking_manager" model="res.groups">
        <field name="name">Booking Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('group_booking_user'))]"/>
    </record>

    <!-- ============================= -->
    <!-- Règles multi-société          -->
    <!-- ============================= -->

    <!-- Booking Import -->
    <record id="rule_booking_import_multi_company" model="ir.rule">
        <field name="name">Booking Import multi-company</field>
        <field name="model_id" ref="model_booking_import"/>
        <field name="groups" eval="[(4, ref('group_booking_user'))]"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <!-- Booking Import Line -->
    <record id="rule_booking_import_line_multi_company" model="ir.rule">
        <field name="name">Booking Import Line multi-company</field>
        <field name="model_id" ref="model_booking_import_line"/>
        <field name="groups" eval="[(4, ref('group_booking_user'))]"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <!-- Booking Month -->
    <record id="rule_booking_month_multi_company" model="ir.rule">
        <field name="name">Booking Month multi-company</field>
        <field name="model_id" ref="model_booking_month"/>
        <field name="groups" eval="[(4, ref('group_booking_user'))]"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <!-- Booking Quarter -->
    <record id="rule_booking_quarter_multi_company" model="ir.rule">
        <field name="name">Booking Quarter multi-company</field>
        <field name="model_id" ref="model_booking_quarter"/>
        <field name="groups" eval="[(4, ref('group_booking_user'))]"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
