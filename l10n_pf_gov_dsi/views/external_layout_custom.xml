<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Héritage du template external_layout_standard -->
        <template id="external_layout_standard_custom" inherit_id="web.external_layout_standard">

            <!-- Modification du conteneur du logo -->
            <xpath expr="//div[@class='col-3 mb4']" position="attributes">
                <attribute name="style">display: flex; align-items: center; padding: 10px;</attribute>
            </xpath>

            <!-- Modification des propriétés du logo -->
            <xpath expr="//img[@t-if='company.logo']" position="attributes">
                <attribute name="style">max-height: 75px; max-width: 100%; height: auto; width: auto; object-fit: contain;</attribute>
            </xpath>

            <!-- Modification de la section report_header (slogan) -->
            <xpath expr="//div[@name='moto']" position="attributes">
                <attribute name="style">margin-top:15px; line-height: 1.1; font-size: 0.9em;</attribute>
            </xpath>

            <!-- Modification de la section adresse entreprise -->
            <xpath expr="//div[@name='company_address']" position="attributes">
                <attribute name="style">line-height: 1.2; font-size: 0.9em;</attribute>
            </xpath>

            <!-- Ajout d'un margin-top réduit à la row contenant l'adresse -->
            <xpath expr="//div[@name='company_address']/parent::div" position="attributes">
                <attribute name="style">margin-top: 5px;</attribute>
            </xpath>

        </template>

    </data>
</odoo>