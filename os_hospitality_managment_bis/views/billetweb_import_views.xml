<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_billetweb_import_form" model="ir.ui.view">
        <field name="name">billetweb.import.form</field>
        <field name="model">billetweb.import</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"
                        />
                        <field name="import_date"/>
                        <field name="file_name"
                        />
                        <field name="file_data"
                               filename="file_name"
                        />
                        <button name="billetweb_import_action"
                                type="object"
                                string="Importer"
                                class="btn-primary"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
