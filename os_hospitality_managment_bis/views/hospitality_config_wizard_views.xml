<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================= -->
    <!-- ASSISTANT DE CONFIGURATION -->
    <!-- ========================================= -->

    <!-- Vue formulaire pour l'assistant de configuration -->
    <record id="view_hospitality_config_wizard_form" model="ir.ui.view">
        <field name="name">hospitality.config.wizard.form</field>
        <field name="model">hospitality.config.wizard</field>
        <field name="arch" type="xml">
            <form string="Assistant de configuration Hospitality">
                <sheet>
                    <div class="oe_title">
                        <h1>Configuration des tarifs Hospitality</h1>
                        <p>Cet assistant vous permet de configurer rapidement les tarifs des services.</p>
                    </div>

                    <group>
                        <group string="Taxe de séjour">
                            <field name="tourist_tax_rate"/>
                            <label for="tourist_tax_rate" string="XPF par nuitée adulte"/>
                        </group>
                        <group string="Commission conciergerie">
                            <field name="concierge_commission_rate" widget="percentage"/>
                            <label for="concierge_commission_rate" string="% du montant net"/>
                        </group>
                    </group>

                    <group string="Dates d'application">
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>

                    <div class="alert alert-info">
                        <p><strong>Note:</strong></p>
                        <ul>
                            <li>La taxe de séjour sera appliquée aux déclarations trimestrielles</li>
                            <li>La commission conciergerie sera calculée sur (CA - Commission Booking - Taxe séjour)</li>
                            <li>Les tarifs précédents seront remplacés par les nouveaux</li>
                        </ul>
                    </div>
                </sheet>
                <footer>
                    <button name="action_apply_configuration"
                            string="Appliquer la configuration"
                            type="object"
                            class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>