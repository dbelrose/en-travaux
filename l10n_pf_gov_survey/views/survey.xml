<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="survey_form_inherit" model="ir.ui.view">
            <field name="name">PF: survey</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <header>
                     <button name="action_start_survey" string="DÃ©marrer" type="object" attrs="{'invisible': ['|', ('session_state', '!=', False), '|', ('state', '!=', 'open'), ('certification', '=', True)]}"/>
                </header>
                <xpath expr="//notebook" position="before">
                    <div>
                        <div>
                            <group colspan="8" col="4">
                                <field
                                        name="company_id"
                                        groups="base.group_multi_company"
                                        options="{'no_create': True}"
                                />
                            </group>
                        </div>
                        <div>
                            <group colspan="8" col="4">
                                <field name="code"/>
                            </group>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="survey_kanban_start" model="ir.ui.view">
            <field name="name">survey.kanban_start</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_kanban"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@role='separator']" position="before">
                   <a t-if="record.state.raw_value == 'open'" role="menuitem" type="object" class="dropdown-item" name="action_start_survey" >DÃ©marrer</a>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
