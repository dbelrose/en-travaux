<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="survey_question_tree_inherit" model="ir.ui.view">
            <field name="name">survey.survey_question.tree</field>
            <field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">true</attribute>
                </xpath>
                <field name="title" position="after">
                    <field name="company_id"/>  <!--permet de rajouter une colonne dans le tableau du début de question  -->
                </field>
                <field name="company_id" position="before">
                    <field name="code"/>  <!--permet de rajouter une colonne dans le tableau du début de question  -->
                </field>
            </field>
        </record>
                <record id="survey_question_form_inherit" model="ir.ui.view">
            <field name="name">survey.survey_question.tree</field>
            <field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="before">     <!--savoir ou positionner les modif et les quels pour l'héritage-->
                    <group colspan="8" col="4">
                        <field name="company_id"/> <!--permet de mettre la compagnie au dessus du tableau dans question  -->
                    </group>
                    <div>
                        <group colspan="8" col="4">
                            <field name="code"/>
                        </group>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>