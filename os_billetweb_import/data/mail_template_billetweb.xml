<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_billetweb_factures" model="mail.template">
            <field name="name">BilletWeb - Notification de Factures</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Vos factures BilletWeb sont disponibles</field>
            <field name="email_from">{{ user.email or 'no-reply@billetweb.fr' }}</field>
            <field name="email_to">{{ object.partner_id.email }}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                  <p>'Ia ora na {{ object.partner_id.name }},</p>
                  <p>Tes factures de commission sont disponibles sur notre portail.</p>
                  <p>
                    <a href="{{ ctx.get('access_url') }}" target="_blank">
                      Clique ici pour les consulter
                    </a>
                  </p>
                  <p>Mauruuru,<br/> </p>
                </div>
            </field>
        </record>
    </data>
</odoo>