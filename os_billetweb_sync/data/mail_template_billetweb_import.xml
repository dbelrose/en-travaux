<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_billetweb_import" model="mail.template">
        <field name="name">Notification Import BilletWeb</field>
        <field name="model_id" ref="os_billetweb_sync.model_billetweb_import_history"/>
        <field name="subject">[BilletWeb] Import terminé - ${object.status}</field>
        <field name="email_from">${(user.email_formatted or '')}</field>
        <field name="email_to">${(user.email_formatted or '')}</field>
        <field name="body_html">
            <![CDATA[
            <p>Bonjour,</p>
            <p>L'import BilletWeb s'est terminé avec le statut <strong>${object.status}</strong>.</p>
            <ul>
                <li>Date : ${object.date_import}</li>
                <li>Société : ${object.company_id.name}</li>
                <li>Virements traités : ${object.number_of_payouts}</li>
                <li>Erreurs : ${object.number_of_errors}</li>
            </ul>
            <p>Merci de vérifier les données si nécessaire.</p>
            ]]>
        </field>
    </record>
</odoo>