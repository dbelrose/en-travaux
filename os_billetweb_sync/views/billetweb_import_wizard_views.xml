<!-- views/billetweb_import_wizard_views.xml -->
<odoo>
    <data>
        <!-- Vue formulaire du wizard -->
        <record id="view_billetweb_import_wizard_form" model="ir.ui.view">
            <field name="name">billetweb.import.wizard.form</field>
            <field name="model">billetweb.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Import BilletWeb">
                    <sheet>
                        <!-- Champs cachés nécessaires pour les conditions -->
                        <field name="state" invisible="1"/>
                        <field name="status" invisible="1"/>

                        <div class="oe_title">
                            <h1>Import BilletWeb</h1>
                        </div>

                        <group invisible="state != 'start'">
                            <div class="alert alert-info" role="alert" style="margin: 20px auto; max-width: 600px; text-align: center;">
                                <p>Cet assistant va lancer l'import des données BilletWeb.</p>
                                <p>Cette opération peut prendre quelques minutes selon le volume de données.</p>
                            </div>
                        </group>

                        <group invisible="state != 'done'">
                            <div class="alert alert-success" role="alert" invisible="status != 'success'">
                                <strong>Import terminé avec succès !</strong>
                            </div>
                            <div class="alert alert-warning" role="alert" invisible="status != 'warning'">
                                <strong>Import terminé avec des avertissements.</strong>
                            </div>
                            <div class="alert alert-danger" role="alert" invisible="status != 'error'">
                                <strong>Import terminé avec des erreurs.</strong>
                            </div>

                            <group string="Résumé de l'import">
                                <field name="companies_processed" readonly="1"/>
                                <field name="records_read" readonly="1"/>
                                <field name="success_count" readonly="1"/>
                                <field name="error_count" readonly="1"/>
                                <field name="status" readonly="1"/>
                            </group>
                        </group>
                    </sheet>

                    <footer>
                        <button string="Lancer l'import"
                                name="action_start_import"
                                type="object"
                                class="btn-primary"
                                invisible="state != 'start'"/>
                        <button string="Fermer"
                                class="btn-secondary"
                                special="cancel"
                                invisible="state != 'done'"/>
                        <button string="Annuler"
                                class="btn-secondary"
                                special="cancel"
                                invisible="state != 'start'"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir le wizard -->
        <record id="action_billetweb_import_wizard" model="ir.actions.act_window">
            <field name="name">Import BilletWeb</field>
            <field name="res_model">billetweb.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_billetweb_import_wizard"
                  name="Import Manuel BilletWeb"
                  parent="os_billetweb_import.menu_billetweb"
                  action="action_billetweb_import_wizard"
                  sequence="10"/>
    </data>
</odoo>