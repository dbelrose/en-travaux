<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree (Liste) -->
    <record id="view_billetweb_api_attendees_tree" model="ir.ui.view">
        <field name="name">billetweb.api.attendees.tree</field>
        <field name="model">billetweb.api.attendees</field>
        <field name="arch" type="xml">
            <tree string="Participants BilletWeb" default_order="create_date desc">
                <field name="ext_id"/>
                <field name="api_user"/>
                <field name="api_call_id"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="view_billetweb_api_attendees_form" model="ir.ui.view">
        <field name="name">billetweb.api.attendees.form</field>
        <field name="model">billetweb.api.attendees</field>
        <field name="arch" type="xml">
            <form string="Participant BilletWeb">
                <sheet>
                    <group>
                        <group>
                            <field name="ext_id"/>
                            <field name="api_user"/>
                            <field name="api_call_id"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="write_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Données JSON">
                            <field name="raw_data" widget="ace" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="view_billetweb_api_attendees_search" model="ir.ui.view">
        <field name="name">billetweb.api.attendees.search</field>
        <field name="model">billetweb.api.attendees</field>
        <field name="arch" type="xml">
            <search string="Rechercher Participants">
                <field name="ext_id"/>
                <field name="api_user"/>
                <field name="api_call_id"/>
                <separator/>
                <filter string="Aujourd'hui" name="today"
                        domain="[('create_date', '>=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="Cette semaine" name="this_week"
                        domain="[('create_date', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d 00:00:00'))]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Utilisateur API" name="group_by_api_user" context="{'group_by': 'api_user'}"/>
                    <filter string="Appel API" name="group_by_api_call" context="{'group_by': 'api_call_id'}"/>
                    <filter string="Date de création" name="group_by_create_date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_billetweb_api_attendees" model="ir.actions.act_window">
        <field name="name">Participants BilletWeb</field>
        <field name="res_model">billetweb.api.attendees</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_billetweb_api_attendees_tree"/>
        <field name="search_view_id" ref="view_billetweb_api_attendees_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun participant trouvé !
            </p>
            <p>
                Les données des participants sont automatiquement synchronisées via l'API BilletWeb.
            </p>
        </field>
    </record>

