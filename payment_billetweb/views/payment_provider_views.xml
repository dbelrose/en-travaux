<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form_billetweb" model="ir.ui.view">
        <field name="name">payment.provider.form.billetweb</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_credentials']" position="after">
                <group name="billetweb_credentials" invisible="code != 'billetweb'">
                    <group name="billetweb_api_credentials" string="Identifiants API">
                        <field name="billetweb_user_id" required="code == 'billetweb'" password="True"/>
                        <field name="billetweb_api_key" required="code == 'billetweb'" password="True"/>
                        <field name="billetweb_default_event_id"/>

                        <label string=" " for="billetweb_user_id"/>
                        <div class="text-muted">
                            <small>
                                Vous pouvez obtenir vos identifiants API sur votre
                                <a href="https://www.billetweb.fr/bo/" target="_blank">
                                    tableau de bord Billetweb <i class="fa fa-external-link"/>
                                </a>
                            </small>
                        </div>
                    </group>
                </group>
            </xpath>

            <xpath expr="//field[@name='payment_method_ids']" position="before">
                <button
                    string="Synchroniser les événements"
                    name="action_sync_billetweb_events"
                    type="object"
                    class="btn-link"
                    icon="fa-refresh"
                    invisible="code != 'billetweb'"
                />
            </xpath>
        </field>
    </record>

</odoo>