<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VIEWS -->

    <record id="view_pdf_report_config_tree" model="ir.ui.view">
        <field name="name">pdf.report.config.tree</field>
        <field name="model">pdf.report.config</field>
        <field name="arch" type="xml">
            <tree string="PDF Report Configuration">
                <field name="name"  readonly="state != 'draft'"/>
                <field name="model_id"  readonly="state != 'draft'"/>
                <field name="state" readonly="state != 'draft'"/>
            </tree>
        </field>
    </record>

    <record id="view_pdf_report_config_form" model="ir.ui.view">
        <field name="name">pdf.report.config.form</field>
        <field name="model">pdf.report.config</field>
        <field name="arch" type="xml">
            <form string="PDF Report Configuration">
            <header>
                <button string="Publish" name="action_publish" type="object" class="oe_highlight btn-primary" invisible="state != 'draft'"/>
                <button string="Unpublish" name="action_unpublish" type="object" class="oe_highlight btn-secondary" invisible="state != 'published'"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,published" statusbar_colors='{"published":"blue","draft":"red"}'  readonly="state != 'draft'"/>
            </header>
                <sheet>
                    <group>
                        <field name="name"  readonly="state != 'draft'"/>
                        <field name="model_id" options="{'no_quick_create':True,'no_create_edit':True, 'no_create':True}"  readonly="state != 'draft'"/>
                        <field name="field_id" options="{'no_quick_create':True,'no_create_edit':True, 'no_create':True}"  readonly="state != 'draft'"/>
                        <field name="prefix"  readonly="state != 'draft'"/>
                        <field name="report_pdf_template" filename="report_pdf_template_filename" readonly="state != 'draft'"/>
                        <field name="report_pdf_template_filename" invisible="1" readonly="state != 'draft'"/>
                        <field name="print_report_name"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ACTIONS (WINDOW) -->

    <record id="pdf_report_action" model="ir.actions.act_window">
        <field name="name">PDF Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pdf.report.config</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first PDF Report Config
            </p>
        </field>
    </record>


    <record id="pdf_report_action_view_order_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_pdf_report_config_tree"/>
        <field name="act_window_id" ref="pdf_report_action"/>
    </record>

    <record id="pdf_report_action_view_order_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pdf_report_config_form"/>
        <field name="act_window_id" ref="pdf_report_action"/>
    </record>

    <menuitem name="Pdf Report" id="menu_main_pdf_report" web_icon="os_pdf_report_generator,static/description/icon.png">
        <menuitem name="Pdf Report" id="menu_pdf_config" action="pdf_report_action" sequence="1"/>
    </menuitem>


</odoo>