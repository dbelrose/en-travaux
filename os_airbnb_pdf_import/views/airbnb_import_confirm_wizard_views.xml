<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire du wizard de confirmation -->
    <record id="view_airbnb_import_confirm_wizard_form" model="ir.ui.view">
        <field name="name">airbnb.import.confirm.wizard.form</field>
        <field name="model">airbnb.import.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmer l'import Airbnb">
                <sheet>
                    <!-- En-t√™te avec photo -->
                    <div class="oe_title">
                        <div class="d-flex align-items-center mb-3">
                            <field name="partner_image" widget="image" class="oe_avatar"
                                   options="{'size': [90, 90]}" nolabel="1"/>
                            <div class="ms-3">
                                <h1><field name="partner_name" readonly="1"/></h1>
                                <div class="text-muted">
                                    <field name="partner_city" readonly="1"/>
                                    <span invisible="partner_country == False">
                                        , <field name="partner_country" readonly="1"/>
                                    </span>
                                </div>
                                <div invisible="partner_phone == False">
                                    üìû <field name="partner_phone" readonly="1"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Messages d'alerte -->
                    <field name="warning_message" widget="html"/>

                    <!-- Onglets -->
                    <notebook>
                        <!-- Onglet 1 : Voyageurs (MODIFIABLE) -->
                        <page string="üë• Voyageurs" name="travelers">
                            <group>
                                <group string="Composition du groupe">
                                    <field name="pax_nb" class="oe_inline"/>
                                    <field name="children" class="oe_inline"/>
                                    <field name="adults" class="oe_inline" readonly="1"/>
                                </group>
                                <group string="Aide">
                                    <div class="alert alert-info" role="status">
                                        <strong>üí° Comment ajuster ?</strong>
                                        <ul class="mb-0">
                                            <li>Le <strong>nombre total</strong> inclut adultes et enfants</li>
                                            <li>Les <strong>enfants</strong> ont 12 ans ou moins</li>
                                            <li>Les <strong>adultes</strong> sont calcul√©s automatiquement</li>
                                            <li>La <strong>taxe de s√©jour</strong> s'applique uniquement aux adultes</li>
                                        </ul>
                                    </div>
                                </group>
                            </group>
                        </page>

                        <!-- Onglet 2 : D√©tails r√©servation (lecture seule) -->
                        <page string="üìÖ R√©servation" name="booking">
                            <group>
                                <group string="Dates">
                                    <field name="arrival_date" readonly="1"/>
                                    <field name="departure_date" readonly="1"/>
                                    <field name="duration_nights" readonly="1"/>
                                    <field name="reservation_date" readonly="1"/>
                                </group>
                                <group string="Logement">
                                    <field name="property_type" readonly="1"/>
                                    <field name="booking_reference" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- Onglet 3 : Finances (lecture seule) -->
                        <page string="üí∞ Finances" name="finances">
                            <group>
                                <group string="Montants en Euros">
                                    <field name="rate_eur" readonly="1" widget="monetary"
                                           options="{'currency_field': 'rate_eur'}"/>
                                    <field name="commission_eur" readonly="1" widget="monetary"
                                           options="{'currency_field': 'commission_eur'}"/>
                                </group>
                                <group string="Montants en XPF">
                                    <field name="rate_xpf" readonly="1"/>
                                    <field name="commission_xpf" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <div class="alert alert-secondary" role="status">
                                    <strong>‚ÑπÔ∏è Taux de conversion :</strong> 1 EUR = 119,33 XPF (environ)
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <!-- Boutons de pied de page -->
                <footer>
                    <button name="action_confirm" string="‚úÖ Confirmer et cr√©er"
                            type="object" class="btn-primary"/>
                    <button name="action_cancel" string="Annuler"
                            type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>