<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_booking" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.booking</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <!-- Odoo 17: insérer un bloc dans la page Paramètres -->
      <xpath expr="//form" position="inside">
        <div class="app_settings_block" data-key="booking" string="Réservations / Billetweb" groups="base.group_system">
          <h2>Réservations / Billetweb</h2>

          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6">
              <div class="o_setting_box">
                <div class="o_setting_right_pane">
                  <label for="billetweb_user_id"/>
                  <div class="text-muted">Identifiants API Billetweb</div>
                  <div class="content-group">
                    <field name="billetweb_user_id"/>
                    <field name="billetweb_api_key" password="True"/>
                    <field name="billetweb_event_id"/>
                    <field name="billetweb_ticket_id"/>
                    <field name="cgv_url"/>
                  </div>
                </div>
              </div>

              <div class="o_setting_box mt16">
                <div class="o_setting_right_pane">
                  <label for="min_nights"/>
                  <div class="text-muted">Règles de réservation</div>
                  <div class="content-group">
                    <field name="min_nights" class="oe_inline"/>
                    <field name="max_months" class="oe_inline"/>
                    <field name="weekly_discount" class="oe_inline"/>
                    <field name="weekly_nights" class="oe_inline"/>
                    <field name="monthly_discount" class="oe_inline"/>
                    <field name="monthly_nights" class="oe_inline"/>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </xpath>
    </field>
  </record>
</odoo>
