<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_booking_reservation_tree" model="ir.ui.view">
        <field name="name">booking.reservation.tree</field>
        <field name="model">booking.reservation</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-success="state=='paid'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="nights"/>
                <field name="total_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_booking_reservation_form" model="ir.ui.view">
        <field name="name">booking.reservation.form</field>
        <field name="model">booking.reservation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirmer" type="object"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_cancel" string="Annuler" type="object"
                            invisible="state not in ('draft', 'confirmed', 'payment_sent')"/>
                    <button name="action_mark_paid" string="Marquer paye" type="object"
                            invisible="state != 'payment_sent'" groups="base.group_system"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="product_id"/>
                            <field name="nightly_rate"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="nights"/>
                        </group>
                    </group>
                    <group>
                        <group string="Montants">
                            <field name="subtotal"/>
                            <field name="discount_percent"/>
                            <field name="discount_amount"/>
                            <field name="total_amount" class="oe_subtotal_footer_separator"/>
                        </group>
                        <group string="Billetweb">
                            <field name="billetweb_order_id" readonly="1"/>
                            <field name="billetweb_payment_url" widget="url" readonly="1"/>
                        </group>
                    </group>
                    <field name="notes"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_booking_reservation_calendar" model="ir.ui.view">
        <field name="name">booking.reservation.calendar</field>
        <field name="model">booking.reservation</field>
        <field name="arch" type="xml">
            <calendar string="Réservations" date_start="start_date" date_stop="end_date" color="product_id">
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="action_booking_reservation" model="ir.actions.act_window">
        <field name="name">Réservations</field>
        <field name="res_model">booking.reservation</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <menuitem id="menu_booking_reservation" name="Réservations" parent="menu_booking_root" action="action_booking_reservation" sequence="10"/>
</odoo>
