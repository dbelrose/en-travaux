<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_accommodation" model="ir.ui.view">
        <field name="name">product.template.accommodation.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Hebergement" invisible="not is_accommodation">
                    <group>
                        <group>
                            <field name="is_accommodation" invisible="1"/>
                            <field name="nightly_rate"/>
                            <field name="max_occupancy"/>
                        </group>
                    </group>
                    <field name="booking_ids">
                        <tree>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="nights"/>
                            <field name="total_amount"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
