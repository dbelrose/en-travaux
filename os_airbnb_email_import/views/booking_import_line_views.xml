<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>
    <!-- Extension formulaire booking.import.line pour Airbnb -->
    <record id="view_booking_import_line_form_airbnb" model="ir.ui.view">
        <field name="name">booking.import.line.form.airbnb</field>
        <field name="model">booking.import.line</field>
        <field name="inherit_id" ref="os_hospitality_managment.view_booking_import_line_form"/>
        <field name="arch" type="xml">
            <!-- Ajout bouton Lead CRM dans button_box -->
            <xpath expr="//sheet" position="before">
                <div class="oe_button_box" name="button_box">
                   <button name="action_view_lead"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-star"
                            invisible="lead_id == False">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Lead CRM</span>
                        </div>
                    </button>
                </div>
            </xpath>

            <!-- Ajout champ lead_id dans un groupe appropriÃ© -->
            <xpath expr="//field[@name='import_id']" position="after">
                <field name="lead_id" readonly="1" invisible="lead_id == False"/>
            </xpath>
        </field>
    </record>

    <!-- Extension vue liste -->
    <record id="view_booking_import_line_tree_lead" model="ir.ui.view">
        <field name="name">booking.import.line.tree.lead</field>
        <field name="model">booking.import.line</field>
        <field name="inherit_id" ref="os_hospitality_managment.view_booking_import_line_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="lead_id" optional="hide"/>
            </field>
        </field>
    </record>

    <!-- Extension vue recherche -->
    <record id="view_booking_import_line_search_lead" model="ir.ui.view">
        <field name="name">booking.import.line.search.lead</field>
        <field name="model">booking.import.line</field>
        <field name="inherit_id" ref="os_hospitality_managment.view_booking_import_line_search"/>
        <field name="arch" type="xml">
            <filter position="inside">
                <filter string="Avec Lead CRM" name="with_lead" 
                        domain="[('lead_id', '!=', False)]"/>
            </filter>
        </field>
    </record>
    </data>
</odoo>
