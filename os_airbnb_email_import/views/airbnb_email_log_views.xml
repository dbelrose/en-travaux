<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <!-- Vue liste des logs -->
    <record id="view_airbnb_email_log_tree" model="ir.ui.view">
        <field name="name">airbnb.email.log.tree</field>
        <field name="model">airbnb.email.log</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'success'" 
                  decoration-warning="state == 'duplicate'" 
                  decoration-danger="state == 'error'"
                  decoration-info="state == 'processing'">
                <field name="date_received" string="Date"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="subject"/>
                <field name="booking_reference"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'success'"
                       decoration-warning="state == 'duplicate'"
                       decoration-danger="state == 'error'"
                       decoration-info="state == 'processing'"/>
                <field name="booking_line_id"/>
                <field name="lead_id"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire du log -->
    <record id="view_airbnb_email_log_form" model="ir.ui.view">
        <field name="name">airbnb.email.log.form</field>
        <field name="model">airbnb.email.log</field>
        <field name="arch" type="xml">
            <form string="Email Airbnb">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="processing,success"/>
                    <button name="action_retry_processing" 
                            string="üîÑ Retraiter" 
                            type="object" 
                            class="btn-warning"
                            invisible="state not in ('error', 'duplicate')"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_booking" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-bed"
                                invisible="booking_line_id == False">
                            <div class="o_stat_info">
                                <span class="o_stat_text">R√©servation</span>
                            </div>
                        </button>
                        <button name="action_view_lead" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-star"
                                invisible="lead_id == False">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Lead CRM</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group string="Informations Email">
                            <field name="date_received"/>
                            <field name="from_email"/>
                            <field name="subject"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Traitement">
                            <field name="booking_reference"/>
                            <field name="booking_line_id"/>
                            <field name="lead_id"/>
                        </group>
                    </group>

                    <group string="‚ùå Erreur" invisible="error_message == False">
                        <field name="error_message" nolabel="1" widget="text"/>
                    </group>

                    <notebook>
                        <page string="üìß Corps HTML" name="html_body">
                            <field name="html_body" widget="html" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_airbnb_email_log_search" model="ir.ui.view">
        <field name="name">airbnb.email.log.search</field>
        <field name="model">airbnb.email.log</field>
        <field name="arch" type="xml">
            <search string="Emails Airbnb">
                <field name="subject"/>
                <field name="booking_reference"/>
                <field name="company_id" groups="base.group_multi_company"/>
                
                <filter string="En cours" name="processing" 
                        domain="[('state', '=', 'processing')]"/>
                <filter string="Trait√©s" name="success" 
                        domain="[('state', '=', 'success')]"/>
                <filter string="Doublons" name="duplicate" 
                        domain="[('state', '=', 'duplicate')]"/>
                <filter string="Erreurs" name="error" 
                        domain="[('state', '=', 'error')]"/>
                
                <separator/>
                <filter string="Aujourd'hui" name="today" 
                        domain="[('date_received', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="Cette semaine" name="week" 
                        domain="[('date_received', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d 00:00:00'))]"/>
                
                <group expand="0" string="Grouper par">
                    <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date_received:day'}"/>
                    <filter string="Soci√©t√©" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_airbnb_email_log" model="ir.actions.act_window">
        <field name="name">üìß Journal emails Airbnb</field>
        <field name="res_model">airbnb.email.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_week': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun email Airbnb re√ßu
            </p>
            <p>
                Les emails Airbnb sont r√©cup√©r√©s automatiquement toutes les 15 minutes.<br/>
                Vous pouvez forcer une r√©cup√©ration manuelle depuis Settings > Companies > onglet Email Airbnb.
            </p>
        </field>
    </record>
    </data>
</odoo>
