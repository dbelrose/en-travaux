<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire -->
    <record id="view_odoo_sync_config_form" model="ir.ui.view">
        <field name="name">odoo.sync.config.form</field>
        <field name="model">odoo.sync.config</field>
        <field name="arch" type="xml">
            <form string="Configuration Synchronisation Odoo.com">
                <header>
                    <button name="test_connection" type="object" string="Tester la connexion"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="odoo_com_url"/>
                        </group>
                        <group>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="download_path"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <group string="Bases de données à synchroniser">
                        <field name="database_names" nolabel="1"
                               placeholder="database1&#10;database2&#10;database3"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste -->
    <record id="view_odoo_sync_config_tree" model="ir.ui.view">
        <field name="name">odoo.sync.config.tree</field>
        <field name="model">odoo.sync.config</field>
        <field name="arch" type="xml">
            <tree string="Configurations de synchronisation">
                <field name="name"/>
                <field name="username"/>
                <field name="active"/>
                <field name="last_sync"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_odoo_sync_config" model="ir.actions.act_window">
        <field name="name">Synchronisation Odoo.com</field>
        <field name="res_model">odoo.sync.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_odoo_sync_root" name="Synchronisation Odoo.com" sequence="100"/>
    <menuitem id="menu_odoo_sync_config" name="Configuration" parent="menu_odoo_sync_root"
              action="action_odoo_sync_config" sequence="10"/>

</odoo>