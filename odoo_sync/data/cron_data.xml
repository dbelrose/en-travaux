<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Tâche planifiée pour synchroniser les bases quotidiennement -->
        <record id="cron_sync_odoo_databases" model="ir.cron">
            <field name="name">Synchronisation bases Odoo.com</field>
            <field name="model_id" ref="model_odoo_sync_config"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">
model.sync_databases()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(hours=2))"/>
        </record>

        <!-- Tâche planifiée alternative pour synchronisation hebdomadaire -->
        <record id="cron_sync_odoo_databases_weekly" model="ir.cron">
            <field name="name">Synchronisation bases Odoo.com (Hebdomadaire)</field>
            <field name="model_id" ref="model_odoo_sync_config"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">
model.sync_databases()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
        </record>

    </data>
</odoo>