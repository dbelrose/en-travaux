<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Cron de synchronisation RTE hebdomadaire -->
  <record id="ir_cron_fp_rte_sync_weekly" model="ir.cron">
    <field name="name">RTE Sync (ISPF → res.partner) Hebdomadaire</field>
    <field name="model_id" ref="model_rte_sync_runner"/>
    <field name="state">code</field>
    <field name="code">model.run_sync()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">weeks</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
    <field name="priority">1</field>
    <field name="doall">False</field>
  </record>

  <!-- Optionnel : Cron quotidien pour plus de fréquence -->
  <record id="ir_cron_fp_rte_sync_daily" model="ir.cron">
    <field name="name">RTE Sync (ISPF → res.partner) Quotidien</field>
    <field name="model_id" ref="model_rte_sync_runner"/>
    <field name="state">code</field>
    <field name="code">model.run_sync()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
    <field name="active">False</field>
    <field name="priority">1</field>
    <field name="doall">False</field>
  </record>

  <!-- Cron simplifié pour queue_job -->
  <record id="ir_cron_fp_rte_sync_weekly_queue" model="ir.cron">
    <field name="name">RTE Sync (queue_job) - Hebdomadaire</field>
    <field name="model_id" ref="model_rte_sync_runner"/>
    <field name="state">code</field>
    <field name="code">model.with_delay(channel='root:rte').run_sync()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">weeks</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
    <field name="priority">1</field>
  </record>
</odoo>