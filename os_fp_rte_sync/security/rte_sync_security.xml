<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Catégorie du module -->
        <record id="module_category_rte_sync" model="ir.module.category">
            <field name="name">RTE Sync (Polynésie française)</field>
            <field name="description">Gestion de la synchronisation du Répertoire des Entreprises</field>
            <field name="sequence">50</field>
        </record>

        <!-- Groupe Utilisateur -->
        <record id="group_rte_sync_user" model="res.groups">
            <field name="name">Utilisateur RTE Sync</field>
            <field name="category_id" ref="module_category_rte_sync"/>
            <field name="comment">Peut consulter l'historique des synchronisations et utiliser le wizard d'attribution d'images</field>
        </record>

        <!-- Groupe Manager -->
        <record id="group_rte_sync_manager" model="res.groups">
            <field name="name">Gestionnaire RTE Sync</field>
            <field name="category_id" ref="module_category_rte_sync"/>
            <field name="implied_ids" eval="[(4, ref('group_rte_sync_user'))]"/>
            <field name="comment">Peut lancer les synchronisations et gérer la configuration</field>
        </record>

        <!-- Règles d'accès basées sur les groupes -->

        <!-- RTE Sync Run - Lecture pour tous les utilisateurs -->
        <record id="rte_sync_run_rule_user" model="ir.rule">
            <field name="name">RTE Sync Run: Lecture utilisateur</field>
            <field name="model_id" ref="model_rte_sync_run"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_rte_sync_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- RTE Sync Run - Toutes permissions pour managers -->
        <record id="rte_sync_run_rule_manager" model="ir.rule">
            <field name="name">RTE Sync Run: Toutes permissions manager</field>
            <field name="model_id" ref="model_rte_sync_run"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_rte_sync_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>