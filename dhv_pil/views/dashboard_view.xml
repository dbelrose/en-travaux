<odoo>
    <data>


        <record id="pil_demande_tree_view" model="ir.actions.act_window">
            <field name="name">pil.demande.tree</field>
            <field name="res_model">pil.demande</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="pil_demande_graph_view" model="ir.actions.act_window">
            <field name="name">pil.demande.tree</field>
            <field name="res_model">pil.demande</field>
            <field name="view_mode">graph</field>
        </record>
        <record id="pil_demande_calendar_view" model="ir.actions.act_window">
            <field name="name">pil.demande.tree</field>
            <field name="res_model">pil.demande</field>
            <field name="view_mode">calendar</field>
        </record>

        <record id="dashboard_form_view" model="ir.ui.view">
            <field name="name">Dashboard DHV</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dashboard">
                    <board style="1-2">
                        <column>
                            <action string="ActivitÃ©s" name="%(pil_demande_calendar_view)d" />
                        </column>
                        <column>
                            <action string="Graph" name="%(pil_demande_graph_view)d" />
                        </column>
                        <column>
                            <action string="Liste des demandes" name="%(pil_demande_tree_view)d" />
                        </column>
                    </board>
                </form>
            </field>
        </record>


        <record id="action_dhv_all_dashboard" model="ir.actions.act_window">
            <field name="name">DHV</field>
            <field name="res_model">board.board</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="dashboard_form_view"/>
        </record>


        <menuitem name="Dashboard" id="menu_dhv_dashboard_new" parent="menu_dashboard"
                  action="action_dhv_all_dashboard"/>
    </data>
</odoo>
