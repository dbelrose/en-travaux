<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pil_param_stat_form" model="ir.ui.view">
            <field name="name">pil.params.stats.form</field>
            <field name="model">pil.params.stats</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="multi_step_wizard.multi_step_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//footer" position="before">
                    <sheet>
                        <button name="action_print_tableaubord"
                                string="Tableau bord"
                                class="btn btn-primary"
                                icon="fa-print"
                                type="object"
                        />
                        <button name="action_print_suivi"
                                string="Suivi"
                                class="btn btn-primary"
                                icon="fa-print"
                                type="object"
                        />
                        <group colspan="2">
                            <field name="anneedemande" />
                            <field name="periodedemande" />
                        </group>
                        <group>
                            <group string="Date de demande">
                                <field name="debutdatedemande"  placeholder="debut" />
                                <field name="findatedemande"  placeholder="fin"/>
                            </group>
                            <group string="Type de sortie">
                                <field name="type_sortie" />
                            </group>
                        </group>
                    </sheet>
                </xpath>
                <xpath expr="//button[@name='open_next']" position="replace">
                </xpath>
            </field>
        </record>

        <record id="open_my_wizard" model="ir.actions.act_window">
            <field name="name">Parametres Ã©dition</field>
            <field name="res_model">pil.params.stats</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="TableauBord" id="statistique_menu" parent="menu_statistique" action="open_my_wizard"/>

    </data>
</odoo>
