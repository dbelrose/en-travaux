<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="parametrage_form_view" model="ir.ui.view">
            <field name="name">parametrage.form</field>
            <field name="model">pil.parametrage</field>
            <field name="arch" type="xml">
                <form string="Paramétrage">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <field name="categorie" placeholder="Valeur catégorie"/>
                            <field name="parametre" placeholder="Valeur parametre"/>
                        </group>
                        <group>
                            <group>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="write_date"/>
                                <field name="write_uid"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="parametrage_tree_view" model="ir.ui.view">
            <field name="name">parametrage.tree.view</field>
            <field name="model">pil.parametrage</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="name"/>
                    <field name="categorie"/>
                    <field name="parametre"/>
                </tree>
            </field>
        </record>

        <record id="parametrage_search_view" model="ir.ui.view">
            <field name="name">parametrage.search</field>
            <field name="model">pil.parametrage</field>
            <field name="arch" type="xml">
                <search string="ModelTitle">
                    <field name="name" />
                    <field name="categorie" />
                    <field name="parametre" />

                    <group expand="1" string="Group By">
                        <filter string="catégorie" name="categorie" domain="[]"
                                context="{'group_by':'categorie'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="parametrage_act_window" model="ir.actions.act_window">
            <field name="name">Parametrage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pil.parametrage</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Parametrage" id="parametrage_menu" parent="menu_parametrage" action="parametrage_act_window"/>

    </data>
</odoo>
