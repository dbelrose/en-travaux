<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="type_aeronef_form_view" model="ir.ui.view">
            <field name="name">manureva.type_aeronef.form</field>
            <field name="model">manureva.type_aeronef</field>
            <field name="arch" type="xml">
                <form string="Type d'aéronef">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="constructeur_id"/>
                                <field name="name" string="Type d'aéronef"/>
                                <field name="typ_oaci"/>
                            </group>
                            <group>
                                <field name="tonnage"/>
                                <field name="pax"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="aeronefs" string="Aéronefs">
                                <group>
                                    <field name="aeronef_ids" nolabel="1">
                                        <tree string="Factures">
                                            <field name="usager_id"/>
                                            <field name="name"/>
                                            <field name="constructeur_id"/>
                                            <field name="typ_oaci"/>
                                            <field name="tonnage"/>
                                            <field name="pax"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

	<record id="view_type_aeronef_tree" model="ir.ui.view">
		<field name="name">manureva.type_aeronef.tree</field>
		<field name="model">manureva.type_aeronef</field>
        <field name="arch" type="xml">
			<tree string="Types d'aéronef">
				<field name="constructeur_id"/>
				<field name="name" string="Type d'aéronef"/>
				<field name="typ_oaci"/>
				<field name="tonnage"/>
				<field name="pax"/>
            </tree>
		</field>
	</record>

        <record id="type_aeronef_search_view" model="ir.ui.view">
            <field name="name">manureva.type_aeronef.search</field>
            <field name="model">manureva.type_aeronef</field>
            <field name="arch" type="xml">
                <search string="Type d'aéronef">
                    <group expand="1" string="Group By">
                        <filter string="Constructeur" name="constructeur_id" domain="[]"
                                context="{'group_by':'constructeur_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_type_aeronef" model="ir.actions.act_window">
            <field name="name">Types d'aéronefs</field>
            <field name="res_model">manureva.type_aeronef</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'tree_view_ref': 'manureva.view_type_aeronef_tree'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créez votre premier type d'aéronef
                </p>
            </field>
        </record>

    	<menuitem id="menu_type_aeronef"
                  parent="menu_aeronefs"
                  name="Type d'aéronefs"
                  action="action_type_aeronef"
                  sequence="20"
        />

</odoo>