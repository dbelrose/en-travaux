<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_type_aerodrome_tree" model="ir.ui.view">
            <field name="name">manureva.type_aerodrome.tree</field>
            <field name="model">manureva.type_aerodrome</field>
            <field name="arch" type="xml">
                <tree string="Types d'aérodrome">
                    <field name="name"/>
                    <field name="a_facturer"/>
                </tree>
            </field>
	    </record>

        <record id="action_type_aerodrome" model="ir.actions.act_window">
            <field name="name">Types d'aérodrome</field>
            <field name="res_model">manureva.type_aerodrome</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créez votre premier type d'aérodrome
                </p>
            </field>
	    </record>

        <menuitem 	id="menu_type_aerodrome"
            parent="menu_aerodromes"
            name="Types d'aérodrome"
            action="action_type_aerodrome"/>

</odoo>