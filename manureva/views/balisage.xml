<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_balisage_form" model="ir.ui.view">
            <field name="name">manureva.balisage.form</field>
            <field name="model">manureva.balisage</field>
            <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group name="groupe_gauche">
                            <field name="type_aerodrome_id" string="Type d'aérodrome"/>
                            <field name="apres" string="Après" widget="float_time"/>
                            <field name="debut" string="Début de validité"/>
                            <field name="active" readonly="True"/>
                        </group>
                        <group name="groupe_droit">
                            <field name="montant" string="Montant"/>
                            <field name="avant" string="Avant" widget="float_time"/>
                            <field name="fin" string="Fin de validité"/>
                        </group>
                    </group>
                </sheet>
            </form>
            </field>
        </record>
        <record id="view_balisage_tree" model="ir.ui.view">
            <field name="name">manureva.balisage.tree</field>
            <field name="model">manureva.balisage</field>
            <field name="arch" type="xml">
                <tree string="Redevance balisage">
                    <field name="type_aerodrome_id"/>
                    <field name="avant"/>
                    <field name="apres"/>
                    <field name="montant"/>
                    <field name="debut"/>
                    <field name="fin"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="action_redevance_balisage" model="ir.actions.act_window">
            <field name="name">Redevance balisage</field>
            <field name="res_model">manureva.balisage</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créez votre première redevance balisage
                </p>
            </field>
        </record>

    	<menuitem 	id="menu_redevance_balisage"
					parent="menu_redevance"
					name="Redevance balisage"
					action="action_redevance_balisage"/>

</odoo>