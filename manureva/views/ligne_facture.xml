<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="ligne_facture_form_view" model="ir.ui.view">
            <field name="name">manureva.ligne_facture.form</field>
            <field name="model">manureva.ligne_facture</field>
            <field name="arch" type="xml">
                <form string="Ligne de facture">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="facture_id"/>
                            </group>
                            <group>
                                <field name="atterrissage"/>
                                <field name="passager"/>
                                <field name="balisage"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ligne_facture" model="ir.ui.view">
            <field name="name">manureva.ligne_facture.tree</field>
            <field name="model">manureva.ligne_facture</field>
            <field name="arch" type="xml">
                <tree string="Lignes de facture">
                    <field name="facture_id"/>
                    <field name="name"/>
                    <field name="atterrissage"/>
                    <field name="passager"/>
                    <field name="balisage"/>
                </tree>
            </field>
        </record>	

        <record id="ligne_facture_search_view" model="ir.ui.view">
            <field name="name">manureva.ligne_facture.search</field>
            <field name="model">manureva.ligne_facture</field>
            <field name="arch" type="xml">
                <search string="Lignes de facture">
                    <field name="facture_id"/>
                    <field name="name" string="Type d'aéronef"/>
                    <group expand="1" string="Group By">
                        <filter string="Facture" name="facture_id" domain="[]"
                                context="{'group_by':'facture_id'}"/>
                        <filter string="Type d'aéronef" name="name" domain="[]"
                                context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_ligne_facture" model="ir.actions.act_window">
            <field name="name">Lignes de facture</field>
            <field name="res_model">manureva.ligne_facture</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Les lignes de facture apparaîtront ici
                </p>
            </field>
        </record>	

</odoo>