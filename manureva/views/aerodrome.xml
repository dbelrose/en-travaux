<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="aerodrome_form_view" model="ir.ui.view">
            <field name="name">manureva.aerodrome.form</field>
            <field name="model">manureva.aerodrome</field>
            <field name="arch" type="xml">
                <form string="Aérodrome">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="iata"/>
                                <field name="aerodrome"/>
                                <field name="balisage"/>
                                <field name="red_balisage"/>
                                <field name="afis"/>
                            </group>
                            <group>
                                <field name="email_ad_pro"/>
                                <field name="email_pro"/>
                                <field name="email_perso"/>
                                <field name="type_aerodrome_id"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_aerodrome_tree" model="ir.ui.view">
            <field name="name">manureva.aerodrome.tree</field>
            <field name="model">manureva.aerodrome</field>
            <field name="arch" type="xml">
                <tree string="Aérodromes">
                    <field name="name"/>
                    <field name="iata"/>
                    <field name="aerodrome"/>
                    <field name="balisage"/>
                    <field name="red_balisage"/>
                    <field name="afis"/>
                    <field name="email_ad_pro"/>
                    <field name="email_pro"/>
                    <field name="email_perso"/>
                    <field name="type_aerodrome_id"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="aerodrome_search_view" model="ir.ui.view">
            <field name="name">manureva.aerodrome.search</field>
            <field name="model">manureva.aerodrome</field>
            <field name="arch" type="xml">
                <search string="Aérodromes">
                    <field name="name"/>
                    <field name="aerodrome"/>
                    <field name="iata"/>
                    <filter string="Balisés"
                            name="balisage"
                            domain="[('balisage','=',True)]"/>
                    <filter string="Non balisés"
                            name="balisage"
                            domain="[('balisage','=',False)]"/>
                    <filter string="Gérés"
                            name="type_aerodrome_id"
                            domain="[('type_aerodrome_id.a_facturer','=',True)]"/>
                    <filter string="Non gérés"
                            name="type_aerodrome_id"
                            domain="[('type_aerodrome_id.a_facturer','!=',True)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Pays" name="country_id" domain="[]"
                                context="{'group_by':'country_id'}"/>
                        <filter string="Type" name="type_aerodrome_id" domain="[]"
                                context="{'group_by':'type_aerodrome_id'}"/>
                        <filter string="Afis" name="afis" domain="[]"
                                context="{'group_by':'afis'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_aerodrome" model="ir.actions.act_window">
            <field name="name">Aérodromes</field>
            <field name="res_model">manureva.aerodrome</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'tree_view_ref': 'manureva.view_aerodrome_tree'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créez votre premier aérodrome
                </p>
            </field>
        </record>

        <record id="action_dgac_apt" model="ir.actions.act_window">
            <field name="name">Aérodromes</field>
            <field name="res_model">manureva.aerodrome</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'tree_view_ref': 'manureva.view_dgac_apt_tree'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Importez la table des aérodromes
                </p>
            </field>
        </record>

    	<menuitem 	id="menu_aerodrome"
					parent="menu_aerodromes"
					name="Aérodromes"
					action="action_aerodrome"/>

</odoo>