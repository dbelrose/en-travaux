<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_type_activite_form" model="ir.ui.view">
		<field name="name">manureva.type_activite.form</field>
		<field name="model">manureva.type_activite</field>
        <field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="name"/>
					</group>
					<notebook>
						<page name="operateurs" string="Operateurs">
							<group>
								<field name="usager_ids" nolabel="1">
									<tree string="Factures">
										<field name="cie_oaci"/>
										<field name="name" string="Nom"/>
									</tree>
								</field>
							</group>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="action_type_activite" model="ir.actions.act_window">
		<field name="name">Types d'activité</field>
		<field name="res_model">manureva.type_activite</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">Créez votre premier type d'activite
			</p>
		</field>
	</record>

    <menuitem 	id="menu_type_activite"
                parent="menu_usager"
                name="Types d'activités"
                action="action_type_activite"
                 sequence="20"
    />

</odoo>